<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back2"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/head"
            android:text="PY_CODE"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="30dp"/>
        <TextView
            android:id="@+id/tv_rows"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:background="#D5C645"
            android:layout_marginTop="102dp"
            android:text="1."
            android:textColor="@color/black"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/codearea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/head"
            android:layout_marginStart="47dp"

            android:textColor="@color/white"
            android:layout_marginTop="38dp"
            android:background="@drawable/outline"
            android:inputType="textMultiLine"
            android:textSize="20dp" />


        <Button
            android:id="@+id/run"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/codearea"
            android:layout_marginStart="300dp"
            android:background="#D5C645"
            android:layout_marginTop="81dp"
            android:text="RUN" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/run"
            android:id="@+id/out_text"
            android:background="#D5C645"
            android:text="OUTPUT:"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginStart="20dp"/>


        <TextView
            android:id="@+id/output"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/out_text"
            android:layout_marginStart="33dp"
            android:layout_marginTop="20dp"
            android:background="@color/black"
            android:textColor="@color/white"
            android:textSize="18dp" />
    </RelativeLayout>
</ScrollView>